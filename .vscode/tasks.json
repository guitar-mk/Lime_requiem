{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc build active file",
            // 1. ÄNDERUNG: Mache aus gcc -> g++
            "command": "/usr/bin/g++", 
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                // 2. ÄNDERUNG: Statt "${file}" nimm alle .cpp Dateien im Ordner
                "${workspaceFolder}/*.cpp", 
                "-o",
                // Hier auch eine kleine Anpassung, damit die .exe im selben Ordner landet:
                "${workspaceFolder}/re9_weapons" 
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}